@model JobOffersWebsiteApp.Models.Job

@{
    ViewBag.Title = "الحذف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>قائمة الحذف</h2>

<h3 class="alert alert-danger">هل انت متاكد من الحذف ؟</h3>
<div>
    <h4>عرض الوظائف التي يمكن حذفها</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobContent).ToString()))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(model => model.JobImage)"
                 class="thumbnail" style="width:100px; height:100px;" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            @Html.ActionLink("العودة الي القائمه الرئيسية  ", "Index")
        </div>
    }
</div>
