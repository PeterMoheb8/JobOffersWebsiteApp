@model IEnumerable<JobOffersWebsiteApp.Models.Job>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 class="alert alert-info">قائمة الوظائف</h2>

<p class="alert alert-link alert-success">
    @Html.ActionLink(" اضافة وظيفة جديدة", "Create")
</p>
<table class="table table-striped table-bordered table-hover" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => item.JobContent).ToString()))
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(model => item.JobImage)"
                 class="thumbnail" style="width:50px; height:50px;" />
        </td>
        <td>
            @Html.ActionLink("التعديل", "Edit", new { id=item.Id }) |
            @Html.ActionLink("التفاصيل", "Details", new { id=item.Id }) |
            @Html.ActionLink("الحذف", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
