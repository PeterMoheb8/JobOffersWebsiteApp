@section scripts{


    <script>
        $(function () {

            $("#save").click(function () {


                //Check if the input is Empty


                //if ($("#JobImage").val() == "") {

                //    $("#error-div").fadeIn();

                //    $("#view-err").append("برجاء قم بأختيار الصورة");
                //    return false;

              //  }


                if ($("#mayImage").val() != "") {

                //Chech if the Image extension is valid


                 var filename = document.getElementById("mayImage").value;
                var extensionImg = filename.substr(filename.lastIndexOf('.') +1);
                    var validExtension = ['jpg', 'png', 'gif', 'bmp', "jpeg"];

                    if ($.inArray(extensionImg, validExtension) == -1) {

                    $("#error-div").fadeIn();

                    $("#view-err").append("  برجاء قم بأختيار صورة بامتداد صحيح  " + "  ");
                    return false;
                }


                //Check if the Image size is valid (2 MB )
                    var myFileSize = document.getElementById("mayImage").file[0].size / 1024 / 1024;

                if (myFileSize > 2) {

                    $("#error-div").fadeIn();

                    $("#view-err").append(" برجاء قم بأختيار صورة  حجمها اقل من 2 ميغا بايت ");
                    return false;
                }
                }


            });
        });
    </script>

}